<%- include('../partials/header') %>

<div class="container">
  <div class="mt-4">
    <h3>Search results for query: "<%= query %>"</h3>
  </div>

  <% if (searchResult.length === 0) { %>
  <div class="mt-4">
    <p>No results found.</p>
  </div>
  <% } else { %>
  <!-- Menu Section -->
  <div class="container py-2 mt-4">
    <div class="row g-4">
      <% searchResult.forEach(monAn => { %>
      <div class="col-md-3 col-sm-6">
        <a href="/booking/dish-info/<%= monAn.MaMon %>" class="food-card">
          <div class="food-item position-relative p-3">
            <img
              src="https://media-cdn.tripadvisor.com/media/photo-p/0a/1b/b2/3a/sushi-hokkaido-sachi.jpg"
              alt="Bánh Mì Cô Chun"
            />
            <h5 class="mt-3"><%= monAn.TenMonAn %></h5>
            <p class="mt-2"><%= monAn.Gia %>đ</p>

            <input type="hidden" name="email" value="<%= user.Email %>" />
            <input type="hidden" name="food" value="<%= monAn.MaMon %>" />
          </div>
        </a>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>
</div>
<%- include('../partials/footer') %>
