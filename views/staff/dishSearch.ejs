<%- include('../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <%- include('../partials/staffNavbar') %>

    <!-- Main Content -->
    <div class="col-md-12 p-4">
      <div class="container my-4">
        <div class="row" id="sushiList">
          <!-- Danh sách món sẽ hiển thị ở đây -->
          <% allMonAn.forEach(monAn => { %>
          <a
            href="/staff/update-dish/<%= monAn.MaMon %>"
            class="col-md-3 col-sm-6 sushi-item mt-4"
            data-khuvuc="<%= monAn.MaKhuVuc %>"
          >
            <form method="POST" class="food-card">
              <div class="food-card">
                <div class="food-item position-relative p-3">
                  <img
                    src="https://media-cdn.tripadvisor.com/media/photo-p/0a/1b/b2/3a/sushi-hokkaido-sachi.jpg"
                    alt="Bánh Mì Cô Chun"
                  />
                  <h5 class="mt-3"><%= monAn.TenMonAn %></h5>
                  <div
                    class="details d-flex justify-content-between align-items-center"
                  >
                    <span
                      ><i class="fa-solid fa-star text-warning"></i> 4.7</span
                    >
                    <span><i class="fa-solid fa-clock"></i> 15 phút</span>
                    <span><i class="fa-solid fa-location-dot"></i> 1.5 km</span>
                  </div>
                  <p class="mt-2"><%= monAn.Gia %>đ</p>

                  <input type="hidden" name="email" value="<%= user.Email %>" />
                  <input type="hidden" name="food" value="<%= monAn.MaMon %>" />
                  <input
                    type="hidden"
                    name="staff"
                    value="<%= user.MaNhanVien %>"
                  />
                </div>
              </div>
            </form>
          </a>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>

<script></script>

<%- include('../partials/footer') %>
