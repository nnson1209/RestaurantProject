<%- include('./partials/header') %>

<div class="container my-5">
  <h1 class="text-center text-orange">
    <i class="fas fa-user"></i> Thông Tin Nhân Viên
  </h1>
  <div class="card mt-4 shadow-lg">
    <div class="card-header bg-orange text-white">
      <h5 class="mb-0">
        <i class="fas fa-address-card"></i> Chi Tiết Nhân Viên
      </h5>
    </div>
    <div class="card-body">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row" class="text-end w-25">Mã Nhân Viên:</th>
            <td><%= profile.MaNhanVien %></td>
          </tr>
          <tr>
            <th scope="row" class="text-end">Họ Tên:</th>
            <td><%= profile.HoTen %></td>
          </tr>
          <tr>
            <th scope="row" class="text-end">Giới Tính:</th>
            <td><%= profile.GioiTinh %></td>
          </tr>
          <tr>
            <th scope="row" class="text-end">Email:</th>
            <td><%= profile.Email %></td>
          </tr>
          <tr>
            <th scope="row" class="text-end">Điện Thoại:</th>
            <td><i class="fas fa-phone"></i> <%= profile.SoDienThoai %></td>
          </tr>
          <tr>
            <th scope="row" class="text-end">Dia chi:</th>
            <td><i class="fas fa-envelope"></i> <%= profile.DiaChi %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
